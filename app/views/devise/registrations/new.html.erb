  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class = "text-center">
          <% if params[:plan]=='2'%>
            <h1>Pro Account</h1>
            <p>Sign up for the pro account for $10/month to get access to extra perks</p>
          <% else %>
            <h1>Basic Account</h1>
            <p>Sign up for the Basic account for free to get basic functionality</p>
          <% end %>
        <div class="well">
          <h2>Sign Up</h2>
          
          
          <% if params[:plan]=='2' %>
            <%= render "pro_form" %>
            
          <% else %>
            <%= render "basic_form" %>
          <% end %>
         
          
          
          
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>